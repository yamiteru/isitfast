{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "dist"
  },
  "include": ["src", "examples"],
  "exclude": ["node_modules"]
}
