{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
